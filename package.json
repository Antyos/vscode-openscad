{
    "name": "openscad",
    "displayName": "OpenSCAD",
    "description": "OpenSCAD highlighting, snippets, and more for VSCode!",
    "version": "0.2.1",
    "publisher": "Antyos",
    "icon": "media/logo.png",
    "license": "SEE LICENSE IN LICENSE.txt",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "homepage": "https://github.com/Antyos/vscode-openscad/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/Antyos/vscode-openscad/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Antyos/vscode-openscad"
    },
    "activationEvents": [
        "onLanguage:scad",
        "workspaceContains:**/*.scad",
        "onCommand:scad.preview",
        "onCommand:scad.kill",
        "onCommand:scad.autoKill",
        "onCommand:scad.killAll",
        "onCommand:scad.exportToStl",
        "onCommand:scad.cheatsheet",
        "onWebviewPanel:cheatsheet"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "scad.cheatsheet",
                "title": "Open Cheatsheet",
                "category": "OpenSCAD"
            },
            {
                "command": "scad.preview",
                "title": "Preview in OpenSCAD",
                "category": "OpenSCAD",
                "icon": {
                    "light": "./media/icons/preview-light.svg",
                    "dark": "./media/icons/preview-dark.svg"
                }
            },
            {
                "command": "scad.kill",
                "title": "Kill OpenSCAD Preview",
                "category": "OpenSCAD",
                "icon": {
                    "light": "./media/icons/kill-light.svg",
                    "dark": "./media/icons/kill-dark.svg"
                }
            },
            {
                "command": "scad.autoKill",
                "title": "Kill OpenSCAD Preview",
                "category": "OpenSCAD",
                "icon": {
                    "light": "./media/icons/kill-light.svg",
                    "dark": "./media/icons/kill-dark.svg"
                }
            },
            {
                "command": "scad.killAll",
                "title": "Kill All OpenSCAD Previews",
                "category": "OpenSCAD"
            },
            {
                "command": "scad.exportToStl",
                "title": "Export to STL",
                "category": "OpenSCAD"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "scad.preview",
                    "when": "editorLangId == scad && config.openscad.showPreviewIconInEditorTitleMenu",
                    "group": "navigation@-1.1"
                },
                {
                    "command": "scad.autoKill",
                    "when": "editorLangId == scad && config.openscad.showPreviewIconInEditorTitleMenu",
                    "group": "navigation@-1.2"
                }
            ],
            "editor/title/context": [
                {
                    "command": "scad.preview",
                    "when": "resourceLangId == scad && config.openscad.showPreviewCommandInEditorTitleContextMenu",
                    "group": "navigation@0"
                },
                {
                    "command": "scad.exportToStl",
                    "when": "resourceLangId == scad && config.openscad.interface.showExportToStlExplorerContextMenu",
                    "group": "navigation@1"
                }
            ],
            "explorer/context": [
                {
                    "command": "scad.preview",
                    "when": "resourceLangId == scad && config.openscad.showPreviewCommandInExplorerContextMenu",
                    "group": "navigation@0"
                },
                {
                    "command": "scad.exportToStl",
                    "when": "resourceLangId == scad && config.openscad.interface.showExportToStlExplorerContextMenu",
                    "group": "navigation@1"
                }
            ],
            "commandPalette": [
                {
                    "command": "scad.preview",
                    "when": "editorLangId == scad"
                },
                {
                    "command": "scad.kill",
                    "when": "areOpenScadPreviews"
                },
                {
                    "command": "scad.autoKill",
                    "when": "never"
                },
                {
                    "command": "scad.killAll",
                    "when": "areOpenScadPreviews"
                },
                {
                    "command": "scad.exportToStl",
                    "when": "editorLangId == scad"
                }
            ]
        },
        "languages": [
            {
                "id": "scad",
                "aliases": [
                    "OpenSCAD",
                    "openscad",
                    "scad"
                ],
                "extensions": [
                    ".scad"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "scad",
                "path": "./snippets/snippets.json"
            }
        ],
        "grammars": [
            {
                "language": "scad",
                "scopeName": "source.scad",
                "path": "./syntaxes/scad.tmlanguage.json"
            }
        ],
        "configuration": {
            "title": "OpenSCAD",
            "properties": {
                "openscad.launchPath": {
                    "type": "string",
                    "default": "C:\\Program Files\\openscad\\openscad.exe",
                    "markdownDescription": "Path to `openscad.exe`."
                },
                "openscad.maxInstances": {
                    "type": "number",
                    "default": 0,
                    "markdownDescription": "The maximum number of instances of OpenSCAD allowed.\nSet to `0` for no limit. Instances include any open previews and any active exports.\n> _Note:_ If you decrease this to less than the number of open editors, they will remain open but you will not be able to open more."
                },
                "openscad.showKillMessage": 
                {
                    "type": "boolean",
                    "default": true,
                    "description": "Show message when a preview is killed"
                },
                "openscad.showPreviewIconInEditorTitleMenu": 
                {
                    "type": "boolean",
                    "default": true,
                    "description": "Show preview and kill buttons in editor title menu"
                },
                "openscad.showPreviewCommandInEditorTitleContextMenu": 
                {
                    "type": "boolean",
                    "default": true,
                    "description": "Show preview command in editor title (tab) context menu"
                },
                "openscad.showPreviewCommandInExplorerContextMenu": 
                {
                    "type": "boolean",
                    "default": true,
                    "description": "Show preview command in explorer context menu"
                },
                "openscad.interface.showExportToStlExplorerContextMenu": 
                {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Show `Export to STL` command in explorer context menu"
                },
                "openscad.cheatsheet.displayInStatusBar": {
                    "type": "string",
                    "enum": [
                        "always",
                        "openDoc",
                        "activeDoc",
                        "never"
                    ],
                    "default": "openDoc",
                    "description": "When to display the \"Open Cheatsheet\" status bar icon.",
                    "enumDescriptions": [
                        "Always displays \"Open Cheatsheet\" in status bar",
                        "Only display \"Open Cheatsheet\" in status bar when a '.scad' is in an open editor",
                        "Only display \"Open Cheatsheet\" in status bar when a '.scad' is the active text editor",
                        "Never display \"Open Cheatsheet\" in status bar"
                    ]
                },
                "openscad.cheatsheet.colorScheme": {
                    "type": "string",
                    "enum": [
                        "original",
                        "auto"
                    ],
                    "default": "auto",
                    "description": "The color scheme to use when displaying the OpenSCAD cheatsheet.",
                    "enumDescriptions": [
                        "Use original OpenSCAD cheatsheet color scheme",
                        "Use VSCode's current theme for cheatsheet color sceheme"
                    ]
                },
                "openscad.cheatsheet.openToSide": {
                    "type": "boolean",
                    "default": true,
                    "description": "Opens OpenSCAD cheatsheet in another column."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./",
        "update-grammar": "js-yaml syntaxes/scad.yaml-tmLanguage > syntaxes/scad.tmLanguage.json"
    },
    "devDependencies": {
        "js-yaml": "^3.13.1",
        "@types/node": "^9.4.6",
        "tslint": "^5.16.0",
        "typescript": "^3.5.1",
        "vsce": "^1.73.0",
        "@types/vscode": "^1.40.0"
    },
    "dependencies": {
        "ste-signals": "^1.6.11"
    }
}
