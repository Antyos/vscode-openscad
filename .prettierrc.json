{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": ["**/.vscode/*.json", "**/tsconfig.json"],
            "options": {
                "tabWidth": 4,
                "parser": "json5",
                "quoteProps": "preserve",
                "singleQuote": false,
                "trailingComma": "all"
            }
        },
        {
            "files": ["*.yml", "*.yaml", "*.yaml-tmLanguage"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
